<%= simple_form_for(@happening,
                    wrapper: :horizontal_form,
                    wrapper_mappings: {
                      boolean: :horizontal_boolean,
                      check_boxes: :horizontal_collection,
                      date: :horizontal_multi_select,
                      datetime: :horizontal_multi_select,
                      file: :horizontal_file,
                      radio_buttons: :horizontal_collection,
                      range: :horizontal_range,
                      time: :horizontal_multi_select
                    }) do |f| %>
  <%= f.input :name  %>
  <%= f.input :description  %>
  <%= f.input :event_kind, collection: Happening.event_kinds  %>
  <%= f.input :point_value  %>

  <div class="form-group">
    <label class="col-sm-3 col-form-label">Happening template name</label>
    <%= @happening.happening_template.name %>
  </div>
  <div class="form-group">
    <label class="col-sm-3 col-form-label">Happening template description</label>
    <%= @happening.happening_template.description %>
  </div>
  <%= f.input :deleted_at, as: :boolean, checked_value: true, unchecked_value: false %>

  <%= f.submit 'save'  %>
<% end %>
